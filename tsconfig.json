{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "lib",
    "jsx": "react",
    "lib": ["ES5","ES6","ES2015","ESNext","DOM","ScriptHost","WebWorker"],
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es6",
    "outDir": "./lib",
    "sourceMap": true,
    "rootDir": "./src",
    "checkJs": false,
    "allowJs": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*.ts",
    "src/**/*.tsx"],
  "exclude": ["node_modules", "lib"]
}
